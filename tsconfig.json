{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "CommonJS", // How to use ESNext?
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/graphql-types": ["./generated/graphql.ts"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}