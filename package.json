{
  "name": "gaulish-api",
  "version": "1.0.0",
  "description": "An API for gaulish.io",
  "author": "Phillip Maier",
  "license": "ISC",
  "main": "./src/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "dotenv -- node ./dist/server.js",
    "dev": "dotenv -- tsnd --files --respawn src/server.ts",
    "build:doc": "docker build --build-arg %NODE_ENV% -t gaulish-api .",
    "dev:doc": "docker run --rm --name gaulish-api -p 3000:3000 -v $INIT_CWD:/usr/src gaulish-api",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "express": "^4.17.1",
    "postgraphile": "^4.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
